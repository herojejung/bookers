<h1 class= "header">
  Books
</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id)%></td>
      <td>Destroy</td>
    </tr>
    <% end %>
  </tbody>
</table>

   <div class="form">
    <h2>New Book</h2>
   </div>
   <div class="form1">
      <%= form_with model: Book.new do |f| %>
    <h4>title</h4>
      <%= f.text_field :title %>
    <h4>body</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
    <% end %>
   </div>